/* Adjust tooltip boxes */
.tooltip-inner {
    border: 2px solid #000 !important;
    background-color: #ffd !important;
    color: #333 !important;
    max-width: 500px !important;
}

.popover {
    max-width: 800px !important;
}

.popover-inner {
    max-width: 500 !important;
}


.tab-content {
    border-bottom: 2px solid #ddd !important;
}

.auto-width {
    width: auto !important;
}

.narrow-txt {
    width: 40px !important;
}

.normal-txt {
    width: 200px !important;
}

.wide-txt {
    width: 400px !important;
}

.superwide-txt {
    width: 800px !important;
}

.btn-no-margin {
    margin: 0 !important;
}

#.btn {
#    margin-bottom: 4px;
#}

/* Customizations: Special Button Types: Action, Std, Search */

.search-query {
    height: 25 !important;     /* mobile recommended standard = 44, but commonly reduced to 25 */
    font-size: 15 !important;
}

img.hspace {
    height: 1 !important;
}

img.vspace {
    width: 1 !important;
}

input {
    height: 25 !important; 
}

form.nomargin {
    /* allow forms with no margins for single button forms */
    margin: 0 0 0 0!important;
}


/* add another alert type for warnings (orange) */
.alert-warning {
  color: #333333 !important;
  background-color: #fbb450 !important; 
  border-color: #faa732 !important;
}

.alert-warning h4 {
  color: #333333 !important;
}

hr.no-margin {
  margin: 0px 0;

}
    
/* add grey colour gradient to dropdown lists */ 
.grayscale {
    background: linear-gradient(top, #ddd 0%, #aaa 100%);  
    background: -moz-linear-gradient(top, #ddd 0%, #aaa 100%); 
    background: -webkit-linear-gradient(top, #ddd 0%,#aaa 100%);
    border-radius: 10px 10px 10px 10px !important;
    border: 2px solid !important;
}

/********************** Standard alDente Colours for Action / Standard / Search Buttons ****************/

/* Action */
.btn.Action,
.Action {
  background-color: #e69999;
  *background-color: #f5e600;
  background-image: -moz-linear-gradient(top, #e69999, #e66666);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#e69999), to(#e66666));
  background-image: -webkit-linear-gradient(top, #e69999, #e66666);
  background-image: -o-linear-gradient(top, #e69999, #e66666);
  background-image: linear-gradient(to bottom, #e69999, #e66666);
}

.Action:hover,
.Action:focus,
.Action:active,
.Action.active,
.Action.disabled,
.Action[disabled] {
  color: #FFFFFF;
  background-color: #e66666;
  *background-color: #d9d9d9;
}

.Action:active,
.Action.active {
  background-color: #cccccc \9;
}

/* Std */

.btn.Std,
.Std {
  background-color: #99e699;
  *background-color: #f5e600;
  background-image: -moz-linear-gradient(top, #99e699, #66e666);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#99e699), to(#66e6e6));
  background-image: -webkit-linear-gradient(top, #99e699, #66e666);
  background-image: -o-linear-gradient(top, #99e699, #66e666);
  background-image: linear-gradient(to bottom, #99e699, #66e666);
}

.Std:hover,
.Std:focus,
.Std:active,
.Std.active,
.Std.disabled,
.Std[disabled] {
}

.Std:active,
.Std.active {
}

/* Search */
.btn.Search,
.Search {
  background-color: #e6e699 !important;
  *background-color: #f5e600 !important;
  background-image: -moz-linear-gradient(top, #e69999, #e66666);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#e6e699), to(#e6e666));
  background-image: -webkit-linear-gradient(top, #e6e699, #e6e666);
  background-image: -o-linear-gradient(top, #e6e699, #e6e666);
  background-image: linear-gradient(to bottom, #e6e699, #e6e666);
}

.Search:hover,
.Search:focus,
.Search:active,
.Search.active,
.Search.disabled,
.Search[disabled] {
  color: #FFFFFF;
  background-color: #e6e666;
  *background-color: #f5e600;
}

.Search:active,
.Search.active {
  background-color: #e6e699 \9;
}

/* Layering */ 

.layer {
    border: 2px;
  border: 1px solid #cccccc;
  *border: 0;
  border-color: #e6e6e6 #e6e6e6 #bfbfbf;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
  border-bottom-color: #b3b3b3;
}
