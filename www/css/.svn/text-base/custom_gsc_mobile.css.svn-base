/* account for fixed top header */

/* Main Navigation Bar */
.navbar-inverse .navbar-inner {
        background-color: #666 !important;
        background-image: linear-gradient(to bottom, #666, #111) !important;
        color: #ddd !important;
        border-radius: 10px 10px 10px 10px !important;
}

/* Background to top part of header */
.local-header {
        background-color: #FFF !important;
        background-image: linear-gradient(to bottom, #FFF, #FFF) !important;
}

/* Progress Bar */

.progress-bar-title {
    line-height: 12px !important;
}
.progress-bar {
    line-height: 12px !important;
}
.inline-progress-bar-title {
    line-height: 12px !important;
    display: inline-block;
    *display: inline;
}
.inline-progress-bar {
    line-height: 12px !important;
    display: inline-block;
    *display: inline;
}

/* specify margins for radio / checkboxes */
input[type="radio"],
input[type="checkbox"] {
      margin: 4px 2px !important;
}

.inline {
    display: inline-block !important;
    *display: inline !important;
}

/* fix hover colour .... */

/* Label box for standard home pages */

.object-label {
    border: 2px solid #000 !important;
    background-color: #eee !important;
    color: #333 !important;
    padding: 4px !important;
}

/** Standard Heading Sizes **/
.page-heading {
    font-size: 31.5px !important;
    line-height: 40px; 
    padding: 14px;
}
.section-heading {
    font-size: 24.5px;
    line-height: 40px; 
    padding: 14px;
}
.subsection-heading {
    font-size: 17.5px;
    line-height: 40px; 
    padding: 14px;
}

.tabclass {
    background-color: #ccd;
}

