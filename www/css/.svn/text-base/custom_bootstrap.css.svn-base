/* Override existing bootstrap specs */

/* account for fixed top header */


/* Main Navigation Bar */
.navbar-inverse .navbar-inner {
        background-color: #666 !important;
        background-image: linear-gradient(to bottom, #666, #111) !important;
        color: #ddd !important;
        border-radius: 10px 10px 10px 10px !important;
}

/*
.up-down:before {content: "\f077"; color:#000; }
.collapsed .up-down:before {content: "\f078"; color:#666; }
*/

.panel-heading.accordion-toggle:before {      
    /* symbol for "opening" panels */

    font-family:'Glyphicons Halflings';
    content:"\e114";
    float: right;
    padding-right: 10px;
    color: grey;
} 

.panel-heading.accordion-toggle.collapsed:before {
    /* symbol for "collapsed" panels */
    content:"\e080"; 
}


/* Adjust tooltip boxes */
.tooltip-inner {
    border: 2px solid #000 !important;
    background-color: #ffd !important;
    color: #333 !important;
    max-width: 500px !important;
}

/** Standard IO width specifications **/
.popover {
    max-width: 800px !important;
}

.popover-inner {
    max-width: 500 !important;
}


/* Customizations: Special Button Types: Action, Std, Search */

.search-query {
    height: 25 !important;     /* mobile recommended standard = 44, but commonly reduced to 25 */
    font-size: 15 !important;
    line-height: 28px !important;
}


input {
    min-height: 25 !important; 
}

/* allow form-header to span full width of standard form (which normally has 15px margin) */
.form-header {
    margin-left: -15px;
    margin-right: -15px;
    border-radius: 0px;
    background-color: #abd;
    padding: 15px;
    margin-bottom:10px;
    font-weight: bold;
}

.inline-form-header {
    border-radius: 0px;
    background-color: #abd;
    padding: 15px;
    font-weight: bold;
    margin-bottom:10px;
}

form.nomargin {
    /* allow forms with no margins for single button forms */
    margin: 0 0 0 0!important;
}


hr.no-margin {
  margin: 0px 0;

}
    
/* add grey colour gradient to dropdown lists */ 
.grayscale {
    background: linear-gradient(top, #ddd 0%, #aaa 100%);  
    background: -moz-linear-gradient(top, #ddd 0%, #aaa 100%); 
    background: -webkit-linear-gradient(top, #ddd 0%,#aaa 100%);
    border-radius: 10px 10px 10px 10px !important;
    border: 2px solid !important;
}


/* Layering */ 

layer {
    border: 2px;
  border: 1px solid #cccccc;
  *border: 0;
  border-color: #e6e6e6 #e6e6e6 #bfbfbf;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
  border-bottom-color: #b3b3b3;
}

.tab-content {
    padding:20px;
}

.flexbox-row {
    flex-direction: row;
}

/*** Alert variations ***/

/* add another alert type for warnings (orange) */
.alert-message {
  color: #C09835 !important;
  background-color: #fcf8e3 !important; 
  border-color: #faebcc !important;
}

.alert-message h4 {
  color: #333333 !important;
}

.alert-warning {
  color: #333333 !important;
  background-color: #fbb450 !important; 
  border-color: #faa732 !important;
}

.alert-warning h4 {
  color: #333333 !important;
}

/********************** Standard alDente Colours for Action / Standard / Search Buttons ****************/
/** button specifications **/
.btn-no-margin {
    margin: 0 !important;
}

/* Action */
.btn.Action,
.Action {
  background-color: #e69999;
  *background-color: #f5e600;
  background-image: -moz-linear-gradient(top, #e69999, #e66666);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#e69999), to(#e66666));
  background-image: -webkit-linear-gradient(top, #e69999, #e66666);
  background-image: -o-linear-gradient(top, #e69999, #e66666);
  background-image: linear-gradient(to bottom, #e69999, #e66666);
  border: 1px solid black;
  border-radius: 8px;
}

.Action:hover,
.Action:focus,
.Action:active,
.Action.active,
.Action.disabled,
.Action[disabled] {
  color: #FFFFFF;
  background-color: #e66666;
  *background-color: #d9d9d9;
}

.Action:active,
.Action.active {
  background-color: #cccccc \9;
}

/* Std */

.btn.Standard,
.Standard,
.btn.Std,
.Std {
  background-color: #99e699;
  *background-color: #f5e600;
  background-image: -moz-linear-gradient(top, #99e699, #66e666);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#99e699), to(#66e6e6));
  background-image: -webkit-linear-gradient(top, #99e699, #66e666);
  background-image: -o-linear-gradient(top, #99e699, #66e666);
  background-image: linear-gradient(to bottom, #99e699, #66e666);
  border: 1px solid black;
  border-radius: 8px;
}

.Std:hover,
.Std:focus,
.Std:active,
.Std.active,
.Std.disabled,
.Std[disabled] {
  font-weight: bold;
}

.Std:active,
.Std.active {
}

